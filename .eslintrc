{
  "root": true,
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "babelOptions": {
      "configFile": "./babel.config.cjs"
    }
  },
  "extends": [
    "standard"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "prefer-const": "error",
    "complexity": [ 1, 10 ],
    "max-len": [
      "warn",
      {
        "code": 100,
        "tabWidth": 2,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-shadow": "error",
    "no-shadow-restricted-names": "error"
  }
}
